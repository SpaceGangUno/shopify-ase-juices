{% stylesheet %}
.process-header {
  text-align: center;
  max-width: 800px;
  margin: 0 auto 4rem;
  padding: 2rem 0;
}

.process-header h2 {
  color: #00A651;
  margin-bottom: 1rem;
}

.process-steps {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
  gap: 2rem;
  margin: 3rem 0;
}

.process-step {
  text-align: center;
  padding: 2rem;
  background: #f9f9f9;
  border-radius: 8px;
  transition: transform 0.3s ease;
}

.process-step:hover {
  transform: translateY(-5px);
}

.step-icon {
  font-size: 2.5rem;
  margin-bottom: 1rem;
}

.process-step h3 {
  color: #00A651;
  margin-bottom: 1rem;
}
{% endstylesheet %}
