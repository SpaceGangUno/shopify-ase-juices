{% stylesheet %}
.benefits-preview {
  padding: 4rem 0;
  text-align: center;
}

.benefits-preview h2 {
  color: var(--color-primary);
  margin-bottom: 3rem;
  font-size: 2.5rem;
}

.benefits-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
  gap: 2rem;
}

.benefit-card {
  padding: 2rem;
  background: var(--color-light-bg);
  border-radius: var(--border-radius);
  transition: var(--transition-default);
}

.benefit-card:hover {
  transform: translateY(-5px);
}

.benefit-icon {
  font-size: 2.5rem;
  margin-bottom: 1rem;
}

.benefit-card h3 {
  color: var(--color-primary);
  margin-bottom: 1rem;
}

.benefit-card p {
  color: var(--color-text);
  line-height: 1.6;
}

@media screen and (max-width: 749px) {
  .benefits-preview {
    padding: 2rem 0;
  }

  .benefits-preview h2 {
    font-size: 2rem;
  }
}
{% endstylesheet %}
