<div class="hero-banner color-{{ section.settings.color_scheme }}">
  <div class="hero-banner__content page-width">
    <div class="hero-banner__text-content">
      <h1 class="hero-banner__heading">{{ section.settings.heading }}</h1>
      <div class="hero-banner__text">{{ section.settings.text }}</div>
      
      <div class="hero-banner__features">
        <div class="feature">
          <span class="feature__icon">{% render 'icon-leaf' %}</span>
          <span class="feature__text">Reset Your Body</span>
        </div>
        <div class="feature">
          <span class="feature__icon">{% render 'icon-plant' %}</span>
          <span class="feature__text">Natural Ingredients</span>
        </div>
        <div class="feature">
          <span class="feature__icon">{% render 'icon-lightning-bolt' %}</span>
          <span class="feature__text">Boost Energy</span>
        </div>
      </div>

      {% if section.settings.button_label != blank %}
        <a href="{{ section.settings.button_link }}" class="button button--primary">
          {{ section.settings.button_label }}
        </a>
      {% endif %}
    </div>
  </div>
</div>

{% stylesheet %}
.hero-banner {
  background-color: #00A651;
  color: white;
  padding: 6rem 0;
  position: relative;
  overflow: hidden;
}

.hero-banner::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-image: url('{{ "hero-bg.jpg" | asset_url }}');
  background-size: cover;
  background-position: center;
  opacity: 0.1;
}

.hero-banner__content {
  position: relative;
  z-index: 1;
  text-align: center;
}

.hero-banner__heading {
  font-size: 3.5rem;
  font-weight: 600;
  margin-bottom: 1.5rem;
  line-height: 1.2;
}

.hero-banner__text {
  font-size: 1.2rem;
  max-width: 600px;
  margin: 0 auto 3rem;
  line-height: 1.6;
}

.hero-banner__features {
  display: flex;
  justify-content: center;
  gap: 3rem;
  margin-bottom: 3rem;
}

.feature {
  display: flex;
  align-items: center;
  gap: 0.5rem;
}

.feature__icon {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 24px;
  height: 24px;
}

.feature__icon svg {
  width: 100%;
  height: 100%;
  fill: currentColor;
}

.feature__text {
  font-weight: 500;
}

.button {
  font-size: 1.1rem;
  padding: 1rem 2rem;
}

@media screen and (max-width: 749px) {
  .hero-banner {
    padding: 4rem 0;
  }

  .hero-banner__heading {
    font-size: 2.5rem;
  }

  .hero-banner__features {
    flex-direction: column;
    gap: 1.5rem;
  }
}
{% endstylesheet %}

{% schema %}
{
  "name": "Hero Banner",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Start Your Wellness Journey Today"
    },
    {
      "type": "richtext",
      "id": "text",
      "label": "Text",
      "default": "<p>Experience the power of natural detoxification. Our carefully crafted programs help cleanse your body, boost energy levels, and restore your natural balance.</p>"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button label",
      "default": "Find Your Perfect Detox"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button link"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "scheme-3"
    }
  ],
  "presets": [
    {
      "name": "Hero Banner",
      "category": "Hero"
    }
  ]
}
{% endschema %}
